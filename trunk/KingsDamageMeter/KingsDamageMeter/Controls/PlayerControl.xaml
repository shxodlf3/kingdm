<UserControl x:Class="KingsDamageMeter.Controls.PlayerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="40" Width="175" Style="{DynamicResource PlayerControlTemplate}" MouseEnter="UserControl_MouseEnter">
    <Grid>
        <Label Margin="12,1.5,77,17" Name="LabelName" Foreground="Gold" FontFamily="Verdana" FlowDirection="LeftToRight" Padding="0" MaxHeight="25" FontSize="9" VerticalContentAlignment="Center"></Label>
        <Label Margin="0,2.25,12,17" Name="LabelDamage" Foreground="Gold" FlowDirection="RightToLeft" FontFamily="Verdana" MaxHeight="25" HorizontalAlignment="Right" Width="59" FontSize="9" Padding="0" VerticalContentAlignment="Center"></Label>
        <ProgressBar Height="10" Margin="12,0,12,6" Name="DamageBar" VerticalAlignment="Bottom" Value="50" Maximum="100" SmallChange="1" LargeChange="10" />
    </Grid>
</UserControl>
