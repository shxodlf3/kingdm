<UserControl x:Class="KingsDamageMeter.Controls.PlayerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="40" Width="160" MouseEnter="UserControl_MouseEnter">
    <UserControl.Resources>
        <Style x:Key="PlayerControlTemplate">
            <Style.Triggers>
                <Trigger Property="UserControl.IsMouseOver" Value="True">
                    <Setter Property="UserControl.Background">
                        <Setter.Value>
                            <ImageBrush ImageSource="./../Themes/BlackPearl/Images/PlayerBackground_Hover.bmp" Stretch="Fill" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="UserControl.IsMouseOver" Value="False">
                    <Setter Property="UserControl.Background">
                        <Setter.Value>
                            <ImageBrush ImageSource="./../Themes/BlackPearl/Images/PlayerBackground.bmp" Stretch="Fill" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="GroupControlTemplate">
            <Style.Triggers>
                <Trigger Property="UserControl.IsMouseOver" Value="True">
                    <Setter Property="UserControl.Background">
                        <Setter.Value>
                            <ImageBrush ImageSource="./../Themes/BlackPearl/Images/GroupMemberBackground_MouseOver.bmp" Stretch="Fill" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="UserControl.IsMouseOver" Value="False">
                    <Setter Property="UserControl.Background">
                        <Setter.Value>
                            <ImageBrush ImageSource="./../Themes/BlackPearl/Images/GroupMemberBackground.bmp" Stretch="Fill" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="95*" />
            <ColumnDefinition Width="65*" />
        </Grid.ColumnDefinitions>
        <Label Name="LabelName" Foreground="Gold" FontFamily="Verdana" FlowDirection="LeftToRight" FontSize="9" VerticalContentAlignment="Center" />
        <Label Name="LabelDamage" Foreground="Gold" FontFamily="Verdana" FontSize="9" VerticalContentAlignment="Center" Grid.Column="1" HorizontalContentAlignment="Right" />
        <ProgressBar Name="DamageBar" VerticalAlignment="Center" Value="50" Maximum="100" SmallChange="1" LargeChange="10" Grid.Row="1" Grid.ColumnSpan="2" Margin="5,0" />
    </Grid>
</UserControl>
