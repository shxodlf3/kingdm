<UserControl x:Class="KingsDamageMeter.Controls.PlayerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="40" Width="160" Style="{DynamicResource PlayerControlTemplate}" MouseEnter="UserControl_MouseEnter">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="95*" />
            <ColumnDefinition Width="65*" />
        </Grid.ColumnDefinitions>
        <Label Name="LabelName" Foreground="Gold" FontFamily="Verdana" FlowDirection="LeftToRight" FontSize="9" VerticalContentAlignment="Center" />
        <Label Name="LabelDamage" Foreground="Gold" FlowDirection="RightToLeft" FontFamily="Verdana" FontSize="9" VerticalContentAlignment="Center" Grid.Column="1" />
        <ProgressBar Name="DamageBar" VerticalAlignment="Center" Value="50" Maximum="100" SmallChange="1" LargeChange="10" Grid.Row="1" Grid.ColumnSpan="2" Margin="5,0" />
    </Grid>
</UserControl>
