<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:KingsDamageMeter">
    
    <!-- Styles -->
    <Style x:Key="PlayerControlTemplate">
        <Style.Triggers>
            <Trigger Property="UserControl.IsMouseOver" Value="True">
                <Setter Property="UserControl.Background">
                    <Setter.Value>
                        <ImageBrush ImageSource="./../../Themes/BlackPearl/Images/PlayerBackground_Hover.bmp" Stretch="Fill" />
                    </Setter.Value>
                </Setter>
            </Trigger>
            <Trigger Property="UserControl.IsMouseOver" Value="False">
                <Setter Property="UserControl.Background">
                    <Setter.Value>
                        <ImageBrush ImageSource="./../../Themes/BlackPearl/Images/PlayerBackground.bmp" Stretch="Fill" />
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>